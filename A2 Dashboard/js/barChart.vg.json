{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 250,
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/dist0001/Data-Visualisation-Repository/refs/heads/main/A2%20Dashboard/data/topBusinessCounts.csv",
    "format": {"type": "csv"}
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Suburb",
      "type": "nominal",
      "title": "Suburb",
      "sort": "-y",
      "axis": {"labelAngle": -45, "labelLimit": 100}
    },
    "y": {
      "field": "businessCount",
      "type": "quantitative",
      "title": "Business Count"
    },
    "color": {
      "field": "businessCount",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "legend": null
    },
    "tooltip": [
      {
        "field": "Suburb",
        "type": "nominal",
        "title": "Suburb"
      },
      {
        "field": "businessCount",
        "type": "quantitative",
        "title": "Business Count",
        "format": ","
      },
      {
        "field": "jobCount",
        "type": "quantitative",
        "title": "Job Count",
        "format": ","
      },
      {
        "field": "Area",
        "type": "quantitative",
        "title": "Area (sq km)",
        "format": ".2f"
      }
    ]
  }
}