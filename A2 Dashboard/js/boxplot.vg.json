{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/dist0001/Data-Visualisation-Repository/refs/heads/main/A2%20Dashboard/data/completeDf_projected.csv"
  },
  "transform": [
    { "filter": "isValid(datum.jobCount)" },
    {
      "fold": ["businessCount", "jobCount"],
      "as": ["Metric", "Value"]
    }
  ],
  "facet": {
    "column": {
      "field": "Metric",
      "type": "nominal",
      "title": null
    }
  },
  "spec": {
    "width": 100,
    "mark": {
      "type": "boxplot",
      "size": 30
    },
    "encoding": {
      "y": {
        "field": "Value",
        "type": "quantitative",
        "title": null,
        "scale": {"type": "sqrt"},
        "axis": {"grid": false}
      },
      "color": {
        "field": "Metric",
        "type": "nominal",
        "scale": {
          "range": ["#8dd3c7", "#fb8072"]
        },
        "legend": null
      },
      "tooltip": [
        {"field": "Metric", "type": "nominal", "title": "Metric"},
        {"field": "Value", "type": "quantitative", "title": "Value", "format": ","},
        {"field": "SA2_NAME16", "type": "nominal", "title": "Suburb"}
      ]
    }
  },
  "resolve": {
    "scale": {"y": "independent"}
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"grid": false}
  }
}